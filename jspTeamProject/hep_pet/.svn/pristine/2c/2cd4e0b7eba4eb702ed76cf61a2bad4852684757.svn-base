body{
  
    padding: 0;
    margin: 0;
}

.header_util span a{
    text-decoration: none;
    color: black;
}
.in_page_wrap{
    
    background: transparent;

    padding: 0;
    margin: 0;
}

div.header_fixed{
    
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    margin: 0 auto;
    width: 100%;
    z-index: 999;
    text-align: center;
    background-color:rgba(0, 0, 0, 0);
    min-width: 1200px;
}
div.header_flex{
    width: 65%;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

#header_btn{
    border: none;
    background-color: #fff;
}
.nav_header{
    width: 80%;
    margin: 0 auto;
    border: 1px solid black;
    padding-left: 0;
    list-style: none;
    display: flex;
    justify-content: end;
    justify-items: center;
    padding: 12px 0px;
    border: none;
    margin-bottom: 0;
    cursor: pointer;
    
}
.nav_header_li{
    
    align-items: center;
    justify-items: center;
    cursor: pointer;    
    width: 200px;
    height: 40px;
}

.nav_sub_header{

    list-style: none;
    padding-left: 0;
    display: none;
   
}

