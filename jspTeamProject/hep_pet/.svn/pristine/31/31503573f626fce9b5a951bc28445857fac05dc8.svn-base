

 /* 메인끝  */

.best_mypet_area{
    
    text-align: center;
    margin: 200px auto;

}
div.best_mypet_wrap{
    
    margin: 0 auto;
}
div.best_mypet_banner{
    margin: 0 auto;
    
    max-width: 1200px;
    
}
div.best_mypet_viewpoint{
    width: 93%;
    overflow: hidden;
    position: relative;
    height: 407px;
    margin: 0 auto;

    
}
div.best_mypet_slide{
    width: 12000%;
    position: relative;
    /* transition-duration: 0s;
    transform: translate3d(-1830px, 0px, 0px); */
    
}
.best_mypet_slide_list_img_text{
float: left;
list-style: none;
position: relative;
width: 350px;
margin-right: 20px;

border: 1px solid black;
}



.best_mypet_slide_list_img img{
    width: 350px;
    height: 250px;
    border-bottom: 1px solid black;
}

.best_mypet_slide_list_text{
padding: 10px;
background-color: #fff;
box-sizing: border-box;
text-align: left;
margin-left: 0px;
}

/* 슬라이드 배너 끝 */

div.second_contain{
    background: #fafafa url("https://www.yongin.go.kr/resources/user/pet/img/main/step_bg.jpg")no-repeat center top;
    width: 100%;
    height: auto;
    padding-bottom: 80px;
}
div.sbox{
    position: relative;
    width: 1200px;
    margin: 0 auto;
    z-index: 100;
}
div.s_sub_box{
    margin: 0 auto;
    display: table;
}
div.s_sub_box >img{
    display: table-cell;
    width: 100%;
    padding-top: 85px;
}
div.s_sub_tex{
    display: table-cell;
    width: 570px;
    padding: 0 50px;
     
    text-align: left;
    vertical-align: middle;
    box-sizing: border-box;
    
}
.info_area{
    background-color: #fafafa;
    padding: 33px 0;
}
.info_inner{
    position: relative;
    width: 1200px;
    margin: 0 auto;
    z-index: 100;
}
.info_inner_ul{
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
}


.info_inner_li{
    list-style: none;
    margin: 0 auto;
    text-align: center;
    
    
}
/* 세션끝 */

.foter_area{
    width: 100%;
    height: auto;
    padding: 45px 0;
    box-sizing: border-box;
}
.footer_area_ul{
    overflow: hidden;
    width: 1200px;
    height: auto;
    margin: 0 auto;
    
    list-style: none;
}

.footer_area_ul_ul >li{
    float: left;
    margin-right: 20px;
    list-style: none;
    
}
