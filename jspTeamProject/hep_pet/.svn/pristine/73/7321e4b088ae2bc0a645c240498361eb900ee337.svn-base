
@import url(//fonts.googleapis.com/earlyaccess/notosanskr.css);
/* 폰트 적용 존 */
.header_util{
    font-family: 'Noto Sans KR', sans-serif;
}
 .heaver_nav{
    font-family: 'Noto Sans KR', sans-serif;
}


/*  */

#loginbtn::after{
    content: "｜";
  font-size: 20px;
    line-height: 1px;
    color: #ddd;
}


#loginbtn{
   
    cursor: pointer;
}
.header_util {
    margin-top: 50px;   
    margin-left: 100px;
}
.header_util span a{
    text-decoration: none;
    color: black;
   
  
}

.in_page_wrap{
    
    background: transparent;

    padding: 0;
    margin: 0;
}


  .header_color{
    background-color:white;
    border-bottom: 1px solid #ddd;
 } 

div.header_fixed{
    
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    margin: 0 auto;
    height: 10px;
    width: 100%;
    z-index: 999;
    text-align: center;
   
    min-width: 1200px;
}
div.header_flex{
    display: flex;
	background-color:white;
    max-width: 1500px;
    height: 80px;
    width: 100%;
    margin: 0 auto;
    
    justify-content: space-around;
    align-items: center;
}

#header_btn{
    border: none;
    background-color: #fff;
}

.nav_header{
   
    background-color: #fff;
   
    width: 100%;
    margin: 0 auto;
/*    font-weight: 500; */
    padding-left: 0;
    list-style: none;
    display: flex;
    justify-content: center;
    justify-items: center;
    padding: 12px 0px;
    border: none;
    margin-bottom: 0;
    cursor: pointer;
    
}

.nav_header_li{

    align-items: center;
    justify-items: center;
    cursor: pointer;    
    width: 200px;
    height: 50px;

    padding: 0 10px ;
  
 
}
.nav_header_li span{
    display: flex;
    justify-content: center;
    align-items: center;
     font-size: 20px;
    
   
    width: 200px;
    height: 50px;
}
.nav_sub_header{

  background-color:white;
    list-style: none;
    padding-left: 0;
    display: none;
   
}

