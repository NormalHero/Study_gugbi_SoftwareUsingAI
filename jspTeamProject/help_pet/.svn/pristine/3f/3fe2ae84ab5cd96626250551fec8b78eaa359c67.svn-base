section.wrap {
    display:flex;
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 1000;
    transition: opacity .2s ease-in-out;
    background-color: #b2b2bf;
    opacity: .7;
    overflow-y: auto;
}

div.container {
    margin: auto;
    width: 100%;
    height: 664.98px;
    max-width: 26.25rem;
    min-height: 35rem;
    border-radius: 0.375rem;
    background-color: white;
    box-shadow: 0 12px 50px 0 rgb(37 32 31 / 25%);
    overflow: hidden;
}

div#img {
    width: 100%;
    height: 300px;
    background-color: black;
}

div#style {
    position: relative;
    display: flex;
    min-width: 10rem;
    height: 1.5rem;
    overflow: hidden;
}

svg {
    position: absolute;
    bottom: -1px;
    width: 700rem;
    height: 1.5rem;
    margin-left: 50%;
    transform: translateX(-50%);
    fill: #fff;
}